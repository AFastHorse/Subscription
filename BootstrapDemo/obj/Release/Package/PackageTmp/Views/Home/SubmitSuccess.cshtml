@using BootstrapDemo.Common
@model Models.Orders
@{
    /**/

    ViewBag.Title = "提交成功";
}
@section styles{
    <link href="~/Content/success.css" rel="stylesheet" />
    <link href="~/Content/html2canvas.css?v=33" rel="stylesheet" />
    <style>
        h4 {
            padding-left: 30px;
            padding-right: 30px;
            line-height: 27px;
        }

        .body-content {
            width: 100%;
            float: left;
            padding: 0;
            background: #d93730;
            color: #fff;
        }

        .rzcg {
            position: relative;
            width: 100%;
            float: left;
        }

            .rzcg .bg_img {
                width: 100%;
                float: left;
            }

        .content {
            position: absolute;
            top: 7rem;
            left: 0;
            width: 100%;
            float: left;
        }

        .content_kh {
            color: #fff;
        }

        .content_nr .end {
            color: #fff;
            margin: 0 10% 19rem;
            width: 80%;
            float: left;
        }

        .content_nr {
            width: 100%;
            float: left;
            margin: 0;
        }

        .xcy {
            width: 100%;
            float: left;
            margin-bottom: 2.2rem
        }

            .xcy p {
                width: 100%;
                float: left;
                font-size: 2rem;
                color: #fff5c2;
                text-align: center;
                padding: 0 10%
            }

        .content_nr .end li .type {
            width: 30%;
        }

        .content_nr .end li .number {
            width: 20%;
        }

        .content_nr .end li .price {
            width: 50%;
        }

        .row {
            margin: 0;
        }

        .shareImg {
            top: -7rem;
            /*padding-left: 10rem;*/
        }

        @@media only screen and (max-width:360px) {
            .content_nr .end {
                margin: 0 10% 12rem;
            }
        }

        @@media only screen and (max-width:320px) {
            .anniu {
                padding-left: 46px;
            }

            .content_nr .end {
                margin: 0 10% 8rem;
            }

                .content_nr .end li .api {
                    width: 100%;
                    float: left;
                    color: #fe5552;
                    text-align: center;
                    font-size: 2.96rem;
                    font-weight: bold;
                    padding: 0.3rem 0 0.2rem;
                }
        }

        @@media only screen and (min-width:375px)and (max-width:400px) {
            .anniu {
                padding-left: 66px;
            }

            .content_nr .end {
                margin: 0 10% 6rem;
            }
        }
    </style>
}
<div class="rzcg">
    <img src="/images/bg4.png" class="bg_img" />
    <div class="content">
        <div class="row">
            <div class="col-md-12 content_kh">
                <h3>尊敬的<span>@(Model.UserName + ViewBag.Sex)</span><br /><span class="cgrz"> 您已提交成功</span></h3>
            </div>
        </div>
        <div class="row content_nr">
            <div class="col-md-12 end ">
                <ul>
                    <li><p>产品目标：</p></li>
                    <li @((int)ViewBag.Saving_Count > 0 ? "" : "style=\"display:none;\"")><p><span class="type">储蓄类产品</span><span class="number">@ViewBag.Saving_Count 件</span><span class="price">保费 @(Convert.ToInt32(ViewBag.Saving_Money))元</span></p></li>
                    <li><p><span class="type">福满星产品</span><span class="number">@Model.FMX_Count 件</span><span class="price">保费 @(Model.FMX_Money)元</span></p></li>
                    <li><p class="api">累计API：@(Convert.ToInt32(ViewBag.API) + Convert.ToInt32(Model.FMX_Money))</p></li>
                </ul>
            </div>
        </div>
        <div class="shareImg" ref="shareImg" id="shareImg"></div>
    </div>
</div>
<div class="row" style="    text-align: center;position: relative;bottom: 2rem;">
    <div class="col-md-12">
        <button style="background:#fe5552;box-shadow: 0 5px 10px #4b0f0e;color:#fff;" id="saveImg" v-on:click="createImage" class="btn btn-default" type="button" data-html2canvas-ignore>保存图片</button>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/nativeShare.js"></script>
    <script src="~/Scripts/html2canvas.js?v=20101212"></script>
    <script src="~/Scripts/vue-2.4.2.min.js?v=20101212"></script>
    <script src="~/Scripts/index.js?v=20101212"></script>
    <script src="~/Scripts/share.js"></script>
}
